<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MachineMapper">
	
	<!--表名 -->
	<sql id="tableName">
		OA_MACHINE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MHID,	
		NAME,	
		TYPE,	
		MODEL,	
		POWER,	
		CHARGE,	
		DAY_REPAIRMAN,	
		NIGHT_REPAIRMAN,	
		BARCODE,	
		BARCODEURL,	
		COMPANY_ID,	
		DELETED,	
		BZ,	
		CHANGE_RULE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MHID},	
		#{NAME},	
		#{TYPE},	
		#{MODEL},	
		#{POWER},	
		#{CHARGE},	
		#{DAY_REPAIRMAN},	
		#{NIGHT_REPAIRMAN},	
		#{BARCODE},	
		#{BARCODEURL},	
		#{COMPANY_ID},	
		#{DELETED},	
		#{BZ},	
		#{CHANGE_RULE}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd" >
		insert into
	<include refid="tableName"></include>
		(
		MHID,
		NAME,
		TYPE,
		MODEL,
		POWER,
		CHARGE,
		DAY_REPAIRMAN,
		NIGHT_REPAIRMAN,
		BARCODE,
		BARCODEURL,
		COMPANY_ID,
		BZ,
		CHANGE_RULE
		) values (
		#{MHID},
		#{NAME},
		#{TYPE},
		#{MODEL},
		#{POWER},
		#{CHARGE},
		#{DAY_REPAIRMAN},
		#{NIGHT_REPAIRMAN},
		#{BARCODE},
		#{BARCODEURL},
		#{COMPANY_ID},
		#{BZ},
		#{CHANGE_RULE}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		MHID = #{MHID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			TYPE = #{TYPE},
			MODEL = #{MODEL},
			POWER = #{POWER},
			CHARGE = #{CHARGE},
			DAY_REPAIRMAN = #{DAY_REPAIRMAN},
			NIGHT_REPAIRMAN = #{NIGHT_REPAIRMAN},
			BARCODE = #{BARCODE},
			BARCODEURL = #{BARCODEURL},
			COMPANY_ID = #{COMPANY_ID},
			DELETED = #{DELETED},
			BZ = #{BZ},
			CHANGE_RULE = #{CHANGE_RULE}
		where
		MHID = #{MHID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			MHID = #{MHID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where COMPANY_ID = #{pd.COMPANY_ID}
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
			MHID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<insert id="saveMachineCycle" parameterType="pd">
		INSERT into oa_machine_cycle(mhid,cycleid,BZ) VALUES(#{mhid},#{cycleid},#{BZ})
	</insert>
	<insert id="saveMachineProject" parameterType="pd">
		INSERT into oa_machine_projec(mhid,projectid) VALUES(#{mhid},#{projectid})
	</insert>
	<insert id="saveMachineRule" parameterType="pd">
		INSERT into oa_machine_rule(mhid,ruleId) VALUES(#{mhid},#{ruleId})
	</insert>
	<insert id="saveMachineParts" parameterType="pd">
		INSERT into oa_machine_parts(mhid,partsId) VALUES(#{mhid},#{partsId})
	</insert>

	<select id="getMachineCycle" parameterType="pd" resultType="pd">
		select a.MCID,a.MHID,a.CYCLEID,a.BZ,b.NAME
		from oa_machine_cycle a
		LEFT JOIN oa_company_basic b ON  b.ocbid = a.CYCLEID
		WHERE a.mhid=#{mhid}
	</select>
	<select id="getMachineProjec" parameterType="pd" resultType="pd">
		select a.MPID,a.MHID,a.PROJECTID
		from oa_machine_projec a
		WHERE a.mhid=#{mhid}
	</select>
</mapper>